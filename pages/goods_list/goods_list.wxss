/* pages/goods_list/goods_list.wxss */
.goods_list {
  width: 100%;
  height: 230rpx;
  display: flex;
  border-bottom: 5rpx solid rgb(236, 230, 230);
}

.good_left {
  flex: 2;
  text-align: center;

}

.good_right {
  flex: 3;
}

.good_font {
  width: 100%;
  height: 60%;
  font-size: 30rpx;
}
.good_font text{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;   
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-top: 40rpx;
}
.good_price {
  width: 100%;
  height: 40%;
  color: red;
  
}

.good_left image {
  width: 80%;
  align-items: center;
  justify-content: center;
}